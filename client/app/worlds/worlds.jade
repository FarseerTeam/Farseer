p(class='white') Worlds
label(for='name', class='white') Name:
input(type='text', id='name', ng-model='newWorld.name', ng-required)
button(type='button', ng-click='addWorld()') Add

div(id="worldsList" ng-repeat='world in worlds', class='white')
    a(href="/worlds/{{convertToLowerCaseNoSpaces(world.name)}}/players?displayableWorld={{world.name}}")(ng-show="!worldEditMode") {{world.name}} &nbsp;
    input(type='text', ng-model='updatedWorldName' value="{{world.name}}")(ng-show="worldEditMode")
    i.fa.fa-pencil-square-o.fa-fw(ng-click='worldEditMode = true')(ng-show="!worldEditMode")
    i.fa.fa-floppy-o.fa-fw(ng-show="worldEditMode")(ng-click='updateWorld(world.name, updatedWorldName)')
    i.fa.fa-undo.fa-fw(ng-show="worldEditMode")(ng-click='worldEditMode = false')
    i.fa.fa-trash.fa-fw(ng-show="worldEditMode")(ng-click="deleteWorld(world.name)")

button(type="button" class="btn btn-default" ng-click="open()") Open me!

html
    body
        script(type='text/ng-template', id='worldsModal1.html').
            <div class="modal-header">
            <h3 class="modal-title">I'm a modal!</h3>
            </div>
            <div class="modal-body">
            <ul>
            <li ng-repeat="item in items">
            <a href="#" ng-click="$event.preventDefault(); selected.item = item">{{ item }}</a>
            </li>
            </ul>
            Selected: <b>{{ selected.item }}</b>
            </div>
            <div class="modal-footer">
            <button class="btn btn-primary" type="button" ng-click="ok()">OK</button>
            <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
            </div>